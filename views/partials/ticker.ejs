<div id='ticker'>
  <h2 id="tickerInfo"></h2>
</div>

<script type='text/javascript'>

'use strict'

fetch('https://covidtracking.com/api/v1/states/wa/current.json')
  .then(response => response.json())
  .then(data => {
    let state = data.state;
    let tests = data.totalTestResults;
    let negative = data.negative;
    let positive = data.positive;
    let update = data.lastUpdateEt;

    $('#tickerInfo').on('load').html('Covid-19 data for ' + state + ' state... Total tests administered: ' + tests + '... Positive tests: ' + positive + '... Negative tests: ' + negative + '... Last updated: ' + update + '...')
  })
  .catch(function(error){
    console.log(error)
  })

</script>

